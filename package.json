{
  "name": "lombard-core",
  "version": "1.0.0",
  "description": "LombardFi core contracts",
  "main": "index.js",
  "scripts": {
    "test": "env-cmd --silent -f .env.dev npx hardhat test",
    "coverage": "env-cmd --silent -f .env.dev npx hardhat coverage",
    "deploy:core:sepolia": "env-cmd --silent -f .env.dev npx hardhat deployCoreContracts --network sepolia",
    "deploy:oracle:sepolia": "env-cmd --silent -f .env.dev npx hardhat deployTestOracle --network sepolia",
    "deploy:pools:sepolia": "env-cmd --silent -f .env.dev npx hardhat deployTestPools --network sepolia",
    "deploy:distribute:sepolia": "env-cmd --silent -f .env.dev npx hardhat distributeTestTokens --network sepolia",
    "deploy:verify:sepolia": "env-cmd --silent -f .env.dev npx hardhat verify --network sepolia",
    "deploy:core:mainnet": "env-cmd --silent -f .env.prod npx hardhat deployCoreContracts --network mainnet",
    "verify:core:mainnet": "env-cmd --silent -f .env.prod npx hardhat verifyDeployments --network mainnet",
    "deploy:oracle:mainnet": "env-cmd --silent -f .env.prod npx hardhat deployTestOracle --network mainnet",
    "verify:oracle:mainnet": "env-cmd --silent -f .env.prod npx hardhat deployTestOracle --network mainnet",
    "lint-js": "eslint .",
    "lint-js-fix": "eslint . --fix",
    "lint-sol": "solhint -f table contracts/**/*.sol",
    "lint-sol-fix": "prettier --write 'contracts/**/*.sol'",
    "format": "prettier -w ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.4",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@typescript-eslint/parser": "^5.40.1",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.1",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "env-cmd": "^10.1.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.8",
    "hardhat": "^2.9.9",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.1",
    "typechain": "^8.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^10.0.0",
    "@types/node": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
